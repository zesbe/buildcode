{
  "name": "claude-codespace-backend",
  "version": "1.0.0",
  "description": "Backend API for Claude Codespace with streaming support",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'No build step required'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "health": "curl -f http://localhost:3002/api/health || exit 1",  
    "deploy:railway": "railway up --detach",
    "deploy:check": "npm run health",
    "logs:railway": "railway logs",
    "env:check": "node -e \"console.log('ANTHROPIC_API_KEY:', !!process.env.ANTHROPIC_API_KEY); console.log('GITHUB_TOKEN:', !!process.env.GITHUB_TOKEN); console.log('NODE_ENV:', process.env.NODE_ENV);\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "octokit": "^3.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}